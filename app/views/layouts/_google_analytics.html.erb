<% if Rails.env.production? %>
  <script
    async
    src="https://www.googletagmanager.com/gtag/js?id=<%= analytics_token %>">
  </script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '<%= analytics_token %>');
  </script>
<% end %>
